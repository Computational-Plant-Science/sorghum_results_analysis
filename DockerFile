#Deriving the latest base image
FROM UBUNTU:20.04

LABEL maintainer ='Brian Nguyen'

COPY ./ /opt/code
WORKDIR /opt/code

RUN apt update
RUN DEBIAN_FRONTEND="noninteractive" apt-get install -y \
    build-essential \
    aptitude \
    libxrandr-dev \
    libxinerama-dev \
    libxcursor-dev \
    libxi-dev \
    libboost-all-dev \
    python3-setuptools \
    python3-pip \
    python3 \
    libsm6 \
    libxext6 \
    cmake-gui \
    software-properties-common \
    nano \
    xorg-dev

RUN pip3 install --upgrade pip && \
    pip3 install numpy \
    matplotlib \
    pytest \
    open3d \
    openpyxl \
    opencv-python-headless  \
    pathlib \
    PyYAML \
    imutils \
    rembg
    

RUN chmod +x /opt/code/script.sh

ENV PYTHONPATH=$PYTHONPATH:/opt/code/
ENV LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/code/